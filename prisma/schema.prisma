// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

generator client {
  provider = "prisma-client-js"
}

model Plant {
  id         String       @id @default(cuid())
  name       String
  pictureUrl String?
  WaterEvent WaterEvent[]
}

enum WaterEventType {
  SKIPPED_TOO_WET
  SKIPPED_SNOOZED
  WATERED
  WATERED_TOO_DRY
}

model WaterEvent {
  id      String         @id @default(cuid())
  date    DateTime
  plant   Plant          @relation(fields: [plantId], references: [id])
  plantId String
  note    String?
  type    WaterEventType
}
